    <Window x:Class="TTS.Main.SpecialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Special Voice Settings" Width="800"
        MinHeight="400" MinWidth="600"
        SizeToContent="Height"
        Background="{DynamicResource AppBackgroundBrush}"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        RenderOptions.BitmapScalingMode="HighQuality"
        RenderOptions.EdgeMode="Aliased"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="MaxDropDownHeight" Value="300"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Special Voice Settings" 
                   FontSize="18" FontWeight="Bold" 
                   Foreground="{DynamicResource AppTextBrush}" 
                   HorizontalAlignment="Center" Margin="10"/>
        
        <!-- Main Content -->
        <StackPanel Grid.Row="1" Margin="10">
                
                <!-- Default Speed Section -->
                <GroupBox Header="Default Speed" Margin="0,0,0,20" 
                          Foreground="{DynamicResource AppTextBrush}">
                    <StackPanel Margin="10">
                        <TextBlock Text="Set the default playback speed for all voices:" 
                                   Foreground="{DynamicResource AppTextBrush}" Margin="0,0,0,10"/>
                        <TextBox x:Name="DefaultSpeedTextBox" Width="100" Height="25" 
                                 Text="1.0" HorizontalAlignment="Left"
                                 Background="{DynamicResource AppInputBackgroundBrush}"
                                 Foreground="{DynamicResource AppTextBrush}"
                                 CaretBrush="{DynamicResource AppTextBrush}"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Voice Mappings Section -->
                <GroupBox Header="Voice Mappings" 
                          Foreground="{DynamicResource AppTextBrush}">
                    <StackPanel Margin="10">
                        <TextBlock Text="Configure which voice to use for different user types:" 
                                   Foreground="{DynamicResource AppTextBrush}" Margin="0,0,0,15"/>
                        
                        <!-- Voice Mapping Grid -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Headers -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="User Type" 
                                       FontWeight="Bold" Foreground="{DynamicResource AppTextBrush}" 
                                       Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Voice" 
                                       FontWeight="Bold" Foreground="{DynamicResource AppTextBrush}" 
                                       Margin="0,0,0,10"/>
                            
                            <!-- Subscriber -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Subscriber" 
                                       Foreground="{DynamicResource AppTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="1" Grid.Column="1" x:Name="SubscriberVoiceComboBox" 
                                      Height="30" Margin="0,0,0,5"
                                      Background="White"
                                      Foreground="Black"/>
                            
                            <!-- Moderator -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Moderator" 
                                       Foreground="{DynamicResource AppTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="2" Grid.Column="1" x:Name="ModeratorVoiceComboBox" 
                                      Height="30" Margin="0,0,0,5"
                                      Background="White"
                                      Foreground="Black"/>
                            
                            <!-- Follow Role 0 (VIP) -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Follow Role 0 (VIP)" 
                                       Foreground="{DynamicResource AppTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="3" Grid.Column="1" x:Name="VipVoiceComboBox" 
                                      Height="30" Margin="0,0,0,5"
                                      Background="White"
                                      Foreground="Black"/>
                            
                            <!-- Follow Role 1 (Follower) -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Follow Role 1 (Follower)" 
                                       Foreground="{DynamicResource AppTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="4" Grid.Column="1" x:Name="FollowerVoiceComboBox" 
                                      Height="30" Margin="0,0,0,5"
                                      Background="White"
                                      Foreground="Black"/>
                            
                            <!-- Follow Role 2 -->
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Follow Role 2" 
                                       Foreground="{DynamicResource AppTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="5" Grid.Column="1" x:Name="FollowRole2VoiceComboBox" 
                                      Height="30" Margin="0,0,0,5"
                                      Background="White"
                                      Foreground="Black"/>
                            
                            <!-- Top Gifter 1 -->
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Top Gifter 1" 
                                       Foreground="{DynamicResource AppTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="6" Grid.Column="1" x:Name="TopGifter1VoiceComboBox" 
                                      Height="30" Margin="0,0,0,5"
                                      Background="White"
                                      Foreground="Black"/>
                            
                            <!-- Top Gifter 2 -->
                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Top Gifter 2" 
                                       Foreground="{DynamicResource AppTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="7" Grid.Column="1" x:Name="TopGifter2VoiceComboBox" 
                                      Height="30" Margin="0,0,0,5"
                                      Background="White"
                                      Foreground="Black"/>
                            
                            <!-- Top Gifter 3 -->
                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Top Gifter 3" 
                                       Foreground="{DynamicResource AppTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="8" Grid.Column="1" x:Name="TopGifter3VoiceComboBox" 
                                      Height="30" Margin="0,0,0,5"
                                      Background="White"
                                      Foreground="Black"/>
                            
                            <!-- Top Gifter 4 -->
                            <TextBlock Grid.Row="9" Grid.Column="0" Text="Top Gifter 4" 
                                       Foreground="{DynamicResource AppTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="9" Grid.Column="1" x:Name="TopGifter4VoiceComboBox" 
                                      Height="30" Margin="0,0,0,5"
                                      Background="White"
                                      Foreground="Black"/>
                            
                            <!-- Top Gifter 5 -->
                            <TextBlock Grid.Row="10" Grid.Column="0" Text="Top Gifter 5" 
                                       Foreground="{DynamicResource AppTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="10" Grid.Column="1" x:Name="TopGifter5VoiceComboBox" 
                                      Height="30" Margin="0,0,0,5"
                                      Background="White"
                                      Foreground="Black"/>
                            
                            <!-- Bad Word Voice -->
                            <TextBlock Grid.Row="11" Grid.Column="0" Text="Bad Word Voice" 
                                       Foreground="{DynamicResource AppTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="11" Grid.Column="1" x:Name="FilterReplyVoiceComboBox" 
                                      Height="30" Margin="0,0,0,5"
                                      Background="White"
                                      Foreground="Black"/>
                            
                            <!-- Default -->
                            <TextBlock Grid.Row="12" Grid.Column="0" Text="Default" 
                                       Foreground="{DynamicResource AppTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="12" Grid.Column="1" x:Name="DefaultVoiceComboBox" 
                                      Height="30" Margin="0,0,0,5"
                                      Background="White"
                                      Foreground="Black"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="SaveButton" Content="Save Settings" Width="120" Height="35" 
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="5"
                    Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="120" Height="35" 
                    Background="#F44336" Foreground="White" FontWeight="Bold" Margin="5"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
