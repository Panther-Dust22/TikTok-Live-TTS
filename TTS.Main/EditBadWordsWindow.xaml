<Window x:Class="TTS.Main.EditBadWordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bad Word Filter &amp; Reply Editor" Height="600" Width="900" MinHeight="400" MinWidth="600"
        Background="{DynamicResource AppBackgroundBrush}"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        RenderOptions.BitmapScalingMode="HighQuality"
        RenderOptions.EdgeMode="Aliased"
        WindowStartupLocation="CenterOwner">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Bad Word Filter &amp; Reply Editor" 
                   FontSize="16" FontWeight="Bold" 
                   Foreground="{DynamicResource AppTextBrush}" 
                   HorizontalAlignment="Center" Margin="10"/>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Side - Bad Words -->
            <Grid Grid.Column="0" Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Bad Words (one per line):" 
                           FontWeight="Bold" Foreground="{DynamicResource AppTextBrush}" 
                           Margin="0,0,0,5"/>
                <TextBox Grid.Row="1" x:Name="BadWordsTextBox" 
                         AcceptsReturn="True" AcceptsTab="True"
                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas" FontSize="12"
                         Background="{DynamicResource AppConsoleBackgroundBrush}"
                         Foreground="{DynamicResource AppConsoleTextBrush}"
                         CaretBrush="{DynamicResource AppTextBrush}"
                         TextWrapping="NoWrap"/>
            </Grid>
            
            <!-- Right Side - Reply Messages -->
            <Grid Grid.Column="1" Margin="5,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Reply Messages (one per line):" 
                           FontWeight="Bold" Foreground="{DynamicResource AppTextBrush}" 
                           Margin="0,0,0,5"/>
                <TextBox Grid.Row="1" x:Name="ReplyMessagesTextBox" 
                         AcceptsReturn="True" AcceptsTab="True"
                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas" FontSize="12"
                         Background="{DynamicResource AppConsoleBackgroundBrush}"
                         Foreground="{DynamicResource AppConsoleTextBrush}"
                         CaretBrush="{DynamicResource AppTextBrush}"
                         TextWrapping="NoWrap"/>
            </Grid>
        </Grid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="SaveButton" Content="Save Settings" Width="120" Height="35" 
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="5"
                    Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="120" Height="35" 
                    Background="#F44336" Foreground="White" FontWeight="Bold" Margin="5"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
