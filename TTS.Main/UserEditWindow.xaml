<Window x:Class="TTS.Main.UserEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User List" Height="600" Width="800"
        WindowStartupLocation="CenterOwner" Background="{DynamicResource AppBackgroundBrush}"
        ResizeMode="CanResize"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        RenderOptions.BitmapScalingMode="HighQuality"
        RenderOptions.EdgeMode="Aliased">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource AppHeaderBackgroundBrush}" Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="ðŸ‘¥ User List Editor" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="{DynamicResource AppTextBrush}" HorizontalAlignment="Center"/>
                <TextBlock Text="Edit voice, name swap, and speed settings for all users" 
                          FontSize="12" Foreground="{DynamicResource AppSecondaryTextBrush}" 
                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- User List -->
        <GroupBox Grid.Row="1" Header="User Settings" Foreground="{DynamicResource AppTextBrush}" Background="{DynamicResource AppConsoleBackgroundBrush}" BorderBrush="{DynamicResource AppBorderBrush}" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Column Headers -->
                <Grid Grid.Row="0" Background="{DynamicResource AppButtonAreaBackgroundBrush}" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Original Name" FontWeight="Bold" Margin="5" VerticalAlignment="Center" Foreground="{DynamicResource AppTextBrush}"/>
                    <TextBlock Grid.Column="1" Text="Name Swap" FontWeight="Bold" Margin="5" VerticalAlignment="Center" Foreground="{DynamicResource AppTextBrush}"/>
                    <TextBlock Grid.Column="2" Text="Voice" FontWeight="Bold" Margin="5" VerticalAlignment="Center" Foreground="{DynamicResource AppTextBrush}"/>
                    <TextBlock Grid.Column="3" Text="Speed" FontWeight="Bold" Margin="5" VerticalAlignment="Center" Foreground="{DynamicResource AppTextBrush}"/>
                    <TextBlock Grid.Column="4" Text="Remove User" FontWeight="Bold" Margin="5" VerticalAlignment="Center" Foreground="{DynamicResource AppTextBrush}"/>
                </Grid>
                
                <!-- Scrollable User List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="UserListItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Original Name (Read-only) -->
                                    <TextBlock Grid.Column="0" Text="{Binding OriginalName}" 
                                               Margin="5" VerticalAlignment="Center" 
                                               FontWeight="Bold" Foreground="{DynamicResource AppTextBrush}"/>
                                    
                                    <!-- Name Swap with overlay approach -->
                                    <Grid Grid.Column="1" Margin="2" Height="30">
                                        <!-- TextBox at the bottom -->
                                        <TextBox Text="{Binding NameSwap, UpdateSourceTrigger=PropertyChanged}" 
                                                 Background="Transparent" 
                                                 Foreground="Transparent"
                                                 BorderThickness="0" 
                                                 Padding="5,5,5,5"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Stretch"/>
                                        
                                        <!-- White overlay on top -->
                                        <Rectangle Fill="White" Stroke="{DynamicResource AppBorderBrush}" StrokeThickness="1" 
                                                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                  IsHitTestVisible="False"/>
                                        
                                        <!-- Text overlay on top of everything -->
                                        <TextBlock Text="{Binding NameSwap}" 
                                                  Foreground="Black"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Margin="5,0,0,0"
                                                  FontSize="12"
                                                  IsHitTestVisible="False"/>
                                    </Grid>
                                    
                                    <!-- Voice -->
                                    <ComboBox Grid.Column="2" SelectedItem="{Binding Voice, UpdateSourceTrigger=PropertyChanged}" 
                                              Margin="2" Height="30" VerticalAlignment="Center"
                                              Background="White" BorderBrush="{DynamicResource AppBorderBrush}"
                                              ItemsSource="{Binding DataContext.VoiceOptions, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    
                                    <!-- Speed -->
                                    <ComboBox Grid.Column="3" SelectedItem="{Binding Speed, UpdateSourceTrigger=PropertyChanged}" 
                                              Margin="2" Height="30" VerticalAlignment="Center"
                                              Background="White" BorderBrush="{DynamicResource AppBorderBrush}"
                                              ItemsSource="{Binding DataContext.SpeedOptions, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    
                                    <!-- Delete X -->
                                    <TextBlock Grid.Column="4" Text="X" Width="30" Height="30" 
                                              Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                                              Foreground="#BF616A" FontWeight="Bold"
                                              FontSize="24" FontFamily="Arial"
                                              Cursor="Hand" MouseLeftButtonDown="DeleteUser_Click" 
                                              Tag="{Binding}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="SaveButton" Content="ðŸ’¾ Save &amp; Close" Width="120" Height="35" 
                    Background="#5E81AC" Foreground="White" FontWeight="Bold" Margin="5"
                    Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="âŒ Cancel" Width="100" Height="35" 
                    Background="#BF616A" Foreground="White" FontWeight="Bold" Margin="5"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
